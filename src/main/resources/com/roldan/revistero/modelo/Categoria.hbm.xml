<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.roldan.revistero.modelo">
  <class 
  	name="Categoria"
  	table="CATEGORIAS">
  	
  	<id
		name="idCategoria"
		column="ID_CATEGORIA">
		<generator class="increment"/>
	</id>
	
	<property
		name="nombre"
		type="string"
		column="NOMBRE"/>
		
	<property
		name="descripcion"	
		type="string"
		column="DESCRIPCION"/>
  
  </class>
</hibernate-mapping>